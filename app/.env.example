# ──────────────────────────────────────────────
# Hotel Intel — Environment Configuration
# ──────────────────────────────────────────────
# Copy this file to .env and fill in your values.

# ── LLM Provider ─────────────────────────────
# Options: openai | anthropic | mistral | local
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Mistral
MISTRAL_API_KEY=...
MISTRAL_MODEL=mistral-large-latest

# Local (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ── Hotel Info ───────────────────────────────
HOTEL_NAME=Eden Rock - St Barths
HOTEL_CURRENCY=€

# ── Data Source ──────────────────────────────
# Path to mock data directory (relative to app/ or absolute)
MOCK_DATA_DIR=../mock-data

# ── Output / Delivery ───────────────────────
# Default output mode: console | email | telegram
DEFAULT_OUTPUT=console

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=hotelintel@example.com
EMAIL_TO=gm@example.com

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
